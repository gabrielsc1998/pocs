{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
